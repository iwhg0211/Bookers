<p id="notice"></p>
<h1>Books</h1>
<table>

 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'show', book_path(@book.id) %></tr>
    <td><%= link_to 'edit', edit_book_path(@book.id) %></tr>
    <td><% link_to 'show', book(@book.id), method: :delete, "delete_confirm"=>"本当に削除しますか？" %></tr>
  <% end %>
 </tbody>
</table>

<h2>新規投稿</h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url:'books' do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>